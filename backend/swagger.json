          },
          "400": {
            "description": "Invalid input or reCAPTCHA verification failed.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Invalid input"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "409": {
            "description": "Email already in use.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Email already in use"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "reCAPTCHA verification failed.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "reCAPTCHA verification failed"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/logout": {
